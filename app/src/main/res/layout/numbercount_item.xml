<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/numbercount_item_conteiner"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="5dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >


            <ImageView
                android:id="@+id/imageNumber"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:contentDescription="background numbers"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/number_background"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/textNumber"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:fontFamily="@font/irish_grover"
                android:gravity="center"
                android:shadowColor="@color/orangemath_green"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:text="1"
                android:textColor="#000000"
                android:textSize="40sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>