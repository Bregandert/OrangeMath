<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    tools:context=".ui.home.HomeFragment">


    <TextView
        android:id="@+id/text_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="52dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/irish_grover"
        android:text="Orange Math"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textColor="#000000"
        android:shadowColor="#BC5B1D"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        app:layout_constraintBottom_toTopOf="@+id/button_learning_0_9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/button_learning_0_9"
        android:layout_width="227dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="66.5dp"
        android:layout_marginTop="120dp"
        android:text="learning 0-9"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="16sp"
        android:background="@drawable/shape_round_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_home" />

    <android.widget.Button
        android:id="@+id/button_learning_10_19"
        android:layout_width="227dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="66.5dp"
        android:layout_marginTop="72dp"
        android:text="learning 10-19"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="16sp"
        android:background="@drawable/shape_round_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_learning_0_9" />

    <android.widget.Button
        android:id="@+id/button_learning_20_29"
        android:layout_width="227dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="66.5dp"
        android:layout_marginTop="72dp"
        android:text="learning 20-29"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/shape_round_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_learning_10_19" />

</androidx.constraintlayout.widget.ConstraintLayout>