<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/learning_fragment_root"
    android:background="@drawable/background_image"
    tools:context=".ui.learning.LearningFragment">

    <GridLayout
        android:id="@+id/top_container"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="50dp"
        android:columnCount="5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:layout_height="56dp"
            android:layout_width="56dp"
            android:layout_margin="12dp"/>

    </GridLayout>

    <GridLayout
        android:id="@+id/number_container"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_container">

        <ImageView
            android:layout_height="120dp"
            android:layout_width="70dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:layout_height="120dp"
            android:layout_width="70dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>


    </GridLayout>

    <GridLayout
        android:id="@+id/case_recycler"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:columnCount="2"
        app:layout_constraintLeft_toRightOf="@id/number_container"
        app:layout_constraintTop_toBottomOf="@id/top_container">

        <ImageView
            android:layout_height="56dp"
            android:layout_width="56dp"
            android:layout_margin="12dp"/>

    </GridLayout>

    <GridLayout
        android:id="@+id/down_recycler"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="30dp"
        android:columnCount="5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/number_container">

        <ImageView
            android:layout_height="56dp"
            android:layout_width="56dp"
            android:layout_margin="12dp"/>

    </GridLayout>

    <android.widget.Button
        android:id="@+id/button_learning_left"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/shape_round_button"
        android:foregroundGravity="center_vertical"
        android:text="назад"
        app:layout_constraintTop_toBottomOf="@id/down_recycler"
        app:layout_constraintStart_toStartOf="parent"/>

    <android.widget.Button
        android:id="@+id/button_learning_rigth"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/shape_round_button"
        android:foregroundGravity="center_vertical"
        android:text="вперед"
        app:layout_constraintTop_toBottomOf="@id/down_recycler"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>